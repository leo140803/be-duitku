{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "RAILPACK",
      "buildCommand": "go build -o server ./cmd"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "./server",
      "sleepApplication": false,
      "multiRegionConfig": {
        "asia-southeast1-eqsg3a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  